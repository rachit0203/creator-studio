  "animations": {
    "description": "Global animation configuration. All scroll-triggered animations use GSAP ScrollTrigger.",
    "library": "GSAP 3.12 + ScrollTrigger plugin",
    "globalDefaults": {
      "ease": "power3.out",
      "duration": 0.75,
      "overwrite": "auto"
    },
    "easingCurves": {
      "in":        "cubic-bezier(0.55, 0, 1, 0.45)",
      "out":       "cubic-bezier(0.0, 0, 0.2, 1)",
      "inOut":     "cubic-bezier(0.76, 0, 0.24, 1)",
      "elastic":   "elastic.out(1, 0.6)",
      "back":      "back.out(1.7)",
      "expo":      "expo.out"
    },
    "pageLoad": {
      "sequence": [
        { "step": 1, "delay": "0ms",   "target": "CustomCursor",  "animation": "fade in" },
        { "step": 2, "delay": "200ms", "target": "Navigation",    "animation": "slideDown from -100%" },
        { "step": 3, "delay": "400ms", "target": "HeroBackground3D", "animation": "scale from 0, elastic" },
        { "step": 4, "delay": "400ms", "target": "HeroHeadline",  "animation": "split-word reveal" },
        { "step": 5, "delay": "900ms", "target": "HeroSubtext",   "animation": "fade-up" }
      ]
    },
    "scrollAnimations": {
      "approach": "ScrollTrigger with scrub where appropriate, snap for none",
      "markers": false,
      "defaultStart": "top 85%",
      "defaultEnd":   "bottom 15%",
      "triggers": {
        "marquee":       { "start": "top bottom", "animation": "marquee-start", "once": true },
        "projectCards":  { "start": "top 88%",    "animation": "stagger-fade-up", "stagger": 0.12 },
        "capabilities":  { "start": "top 85%",    "animation": "stagger-fade-up", "stagger": 0.1 },
        "contact":       { "start": "top 80%",    "animation": "fade-up" }
      }
    },
    "microInteractions": {
      "buttonHover": {
        "scale": 1.02,
        "duration": "200ms",
        "ease": "power2.out"
      },
      "navLinkHover": {
        "color": "foreground.primary",
        "underlineScaleX": 1,
        "duration": "200ms"
      },
      "cardHover": {
        "imageScale": 1.04,
        "borderColor": "rgba(255,255,255,0.18)",
        "duration": "400ms"
      },
      "cursorHover": {
        "ringScale": 2,
        "dotScale": 0.5,
        "duration": "300ms"
      }
    },
    "threeJS": {
      "renderLoop": "GSAP ticker (gsap.ticker.add)",
      "resizeHandler": "ResizeObserver → camera aspect + renderer size",
      "performanceHints": {
        "pixelRatio": "Math.min(window.devicePixelRatio, 2)",
        "antialias": true,
        "powerPreference": "high-performance",
        "shadowMap": false
      }
    }
  },

  "interactionStates": {
    "focusVisible": {
      "outline": "2px solid #FF3B00",
      "outlineOffset": "3px",
      "borderRadius": "2px",
      "note": "Only shows for keyboard navigation (focus-visible pseudo-class)"
    },
    "hoverGlobal": {
      "cursor": "none",
      "note": "Custom cursor replaces default cursor sitewide"
    },
    "linkUnderline": {
      "method": "CSS pseudo-element scaleX transform",
      "origin": "left on enter, right on leave",
      "color": "accent.brand",
      "height": "1px"
    },
    "buttonStates": {
      "default":  { "opacity": 1.0 },
      "hover":    { "opacity": 1.0, "background": "#E63300" },
      "active":   { "opacity": 0.85, "transform": "scale(0.98)" },
      "disabled": { "opacity": 0.4, "cursor": "not-allowed" }
    },
    "inputStates": {
      "default":     { "border": "1px solid rgba(255,255,255,0.1)" },
      "focus":       { "border": "1px solid rgba(255,255,255,0.3)", "outline": "2px solid rgba(255,59,0,0.4)" },
      "error":       { "border": "1px solid #FF3B00", "errorText": { "color": "#FF3B00", "font": "label" } },
      "success":     { "border": "1px solid #22C55E" }
    }
  },

